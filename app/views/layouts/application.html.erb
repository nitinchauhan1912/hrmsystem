<!DOCTYPE html>
<html>
  <head>
    <title>Hrmsystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="">
    <div class ="banner">
      <div class="banner-image" style="float:left;">
        <%= image_tag("grk.png", style: "width:50%;") %>
      </div>
      <div class="banner-name" style="float:left;padding-top:25px;">
        <%= @page_title || "Human Resource Management System" %>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>


